{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django (venv auto)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app_site/manage.py",
            "args": ["runserver"],
            "django": true,
            "env": { 
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": true,
            // АВТОАКТИВАЦИЯ VENV
            "python": "${workspaceFolder}/venv/Scripts/python.exe"
        }
    ]
}